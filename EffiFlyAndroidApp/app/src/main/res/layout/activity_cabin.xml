                android:layout_width="120dp"
                android:layout_height="150dp"
                android:background="@drawable/border"
                android:layout_margin="5dp"
                android:layout_alignLeft="@+id/c1"
                android:layout_below="@+id/c3"
                android:orientation="vertical">
